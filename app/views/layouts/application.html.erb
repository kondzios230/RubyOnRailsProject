<!DOCTYPE html>
<html>

<head>
  <title>
    <%= full_title(yield(:title)) %>
  </title>
  <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
</head>

<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to "portal rowerowy", '/', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to "Top",   '#' %>
            </li>
           
            <% if logged_in? %>
                   <li><%= link_to "UÅ¼ytkownicy", users_path %></li>
              <% if current_user.admin? %>
               <li><%= link_to "Dodaj news", newnews_path %></li>
              <% end %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Konto <b class="caret"></b>
            </a>
                <ul class="dropdown-menu">
                  
                  <li>
                    <%= link_to "Profil", current_user %>
                  </li>
                  <li>
                    <%= link_to "Ustawienia", edit_user_path(current_user) %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Wyloguj", logout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
              <% else %>
                <li>
                  <%= link_to "Zaloguj", login_path %>
                </li>
                <% end %>

          </ul>
        </nav>
    </div>
  </header>
  <div class="container">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <%= message %>
      </div>
      <% end %>

        <%= yield %>
  </div>
</body>

</html>